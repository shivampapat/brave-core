if (host_os == "linux") {
  import("//build/toolchain/gcc_toolchain.gni")

  clang_toolchain("redirect_cc") {
    toolchain_args = {
      current_cpu = host_cpu
      current_os = host_os
      cc_wrapper = ""
      use_goma = false
      is_component_build = false
      is_debug = false
      is_official_build = false
    }
  }
} else if (host_os == "mac") {
  import("//build/config/mac/mac_sdk.gni")
  import("//build/toolchain/apple/toolchain.gni")

  apple_toolchain("redirect_cc") {
    bin_path = mac_bin_path
    toolchain_args = {
      current_cpu = host_cpu
      current_os = host_os
      cc_wrapper = ""
      use_goma = false
      is_component_build = false
      is_debug = false
      is_official_build = false
    }
  }
}
